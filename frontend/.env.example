# Pathfinder Frontend Environment Configuration Template
# 复制此文件为 .env 并根据实际情况修改配置

# ================================
# API 配置 (API Configuration)
# ================================
VITE_API_BASE_URL=http://localhost:3001/api
VITE_API_TIMEOUT=30000

# ================================
# 应用配置 (Application Configuration)
# ================================
VITE_APP_TITLE="Pathfinder - 转化路径扫描仪"
VITE_APP_DESCRIPTION="数据驱动的销售转化漏斗分析平台"
VITE_APP_VERSION="1.0.0"
VITE_APP_AUTHOR="Pathfinder Team"

# ================================
# 开发服务器配置 (Development Server)
# ================================
VITE_DEV_PORT=8080
VITE_DEV_HOST=localhost
VITE_OPEN_BROWSER=true
VITE_DEV_HTTPS=false

# ================================
# 构建配置 (Build Configuration)
# ================================
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_MINIFY=true
VITE_BUILD_TARGET="es2015"

# ================================
# 路由配置 (Router Configuration)
# ================================
VITE_ROUTER_BASE="/"
VITE_ROUTER_MODE="history"

# ================================
# 主题配置 (Theme Configuration)
# ================================
VITE_DEFAULT_THEME="light"
VITE_THEME_COLOR="#3B82F6"
VITE_ENABLE_DARK_MODE=true

# ================================
# 功能开关 (Feature Flags)
# ================================
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_MOCK_API=false
VITE_ENABLE_AI_COACH=true
VITE_ENABLE_ANALYTICS=true

# ================================
# 性能配置 (Performance Configuration)
# ================================
VITE_ENABLE_PWA=false
VITE_CACHE_STRATEGY="cacheFirst"
VITE_PREFETCH_ENABLED=true

# ================================
# 调试配置 (Debug Configuration)
# ================================
VITE_LOG_LEVEL="debug"
VITE_SHOW_API_ERRORS=true
VITE_ENABLE_CONSOLE_LOGS=true

# ================================
# 图表配置 (Chart Configuration)
# ================================
VITE_CHART_THEME="default"
VITE_CHART_ANIMATION=true
VITE_CHART_RESPONSIVE=true

# ================================
# 拖拽编辑器配置 (Drag Editor Configuration)
# ================================
VITE_FUNNEL_AUTO_SAVE=true
VITE_FUNNEL_SAVE_INTERVAL=5000
VITE_MAX_NODES_PER_FUNNEL=20
VITE_CANVAS_ZOOM_MIN=0.1
VITE_CANVAS_ZOOM_MAX=3.0

# ================================
# 数据配置 (Data Configuration)
# ================================
VITE_DATA_REFRESH_INTERVAL=30000
VITE_MAX_HISTORY_WEEKS=52
VITE_ENABLE_DATA_EXPORT=true

# ================================
# 国际化配置 (i18n Configuration)
# ================================
VITE_DEFAULT_LOCALE="zh-CN"
VITE_FALLBACK_LOCALE="en-US"
VITE_ENABLE_I18N=false

# ================================
# 第三方服务配置 (Third-party Services)
# ================================
# 分析服务 (可选)
VITE_ANALYTICS_ID=""
VITE_ANALYTICS_ENABLED=false

# 错误监控 (可选)
VITE_SENTRY_DSN=""
VITE_SENTRY_ENABLED=false

# ================================
# 安全配置 (Security Configuration)
# ================================
VITE_ENABLE_CSP=true
VITE_ALLOWED_HOSTS="localhost,127.0.0.1"

# ================================
# 移动端配置 (Mobile Configuration)
# ================================
VITE_RESPONSIVE_BREAKPOINT_SM=640
VITE_RESPONSIVE_BREAKPOINT_MD=768
VITE_RESPONSIVE_BREAKPOINT_LG=1024
VITE_RESPONSIVE_BREAKPOINT_XL=1280

# ================================
# WebSocket 配置 (WebSocket Configuration)
# ================================
VITE_WS_URL="ws://localhost:3001"
VITE_WS_ENABLED=false
VITE_WS_RECONNECT_INTERVAL=5000

# ================================
# CDN 配置 (CDN Configuration)
# ================================
VITE_CDN_BASE_URL=""
VITE_STATIC_ASSETS_CDN=""