# 数据库配置
DATABASE_URL="postgresql://username:password@localhost:5432/pathfinder_dev"

# JWT 配置
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# 服务器配置
NODE_ENV="development"
PORT=3001

# CORS 配置
FRONTEND_URL="http://localhost:3000"

# Redis 配置（可选）
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""

# 日志配置
LOG_LEVEL="info"
LOG_FILE_PATH="logs/pathfinder.log"

# 邮件配置（用于密码重置等功能）
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_USER="your-email@example.com"
SMTP_PASS="your-email-password"
SMTP_FROM="noreply@pathfinder.com"

# 文件上传配置
MAX_FILE_SIZE="10mb"
UPLOAD_PATH="uploads/"

# API 限制
RATE_LIMIT_WINDOW="15"  # 分钟
RATE_LIMIT_MAX_REQUESTS="100"

# 安全配置
BCRYPT_ROUNDS="12"
SESSION_SECRET="your-session-secret-key"

# 开发工具
DATABASE_LOGGING="true"