# Pathfinder Backend 开发环境 Dockerfile
FROM node:18-alpine

# 设置 npm 和 yarn 国内镜像
RUN npm config set registry https://registry.npmmirror.com
RUN npm config set disturl https://registry.npmmirror.com/-/binary/node

# 设置工作目录
WORKDIR /app

# 安装系统依赖
RUN apk add --no-cache \
    openssl \
    ca-certificates \
    && rm -rf /var/cache/apk/*

# 复制 package 文件
COPY package*.json ./
COPY tsconfig.json ./
COPY prisma/ ./prisma/

# 安装依赖
RUN npm ci

# 生成 Prisma 客户端
RUN npm run db:generate

# 复制源代码
COPY src/ ./src/

# 创建非 root 用户
RUN addgroup -g 1001 -S nodejs && \
    adduser -S pathfinder -u 1001

# 更改文件所有权
RUN chown -R pathfinder:nodejs /app
USER pathfinder

# 暴露端口
EXPOSE 3001

# 健康检查
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD node -e "require('http').get('http://localhost:3001/health', (res) => { process.exit(res.statusCode === 200 ? 0 : 1) })" || exit 1

# 启动开发服务器
CMD ["npm", "run", "dev"]